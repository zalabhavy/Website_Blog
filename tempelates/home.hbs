  <script>
    function highlightSearch() 
    {
      let searchQuery = document.getElementById("searchInput").value.trim().toLowerCase();
      let paragraphs = document.querySelectorAll("#content p");
  
      let firstHighlightedParagraph = null;
  
      paragraphs.forEach(function(paragraph) {
        let text = paragraph.textContent.toLowerCase();
        if (text.includes(searchQuery)) {
          let newText = text.replace(new RegExp(searchQuery), function(match) 
          {
            return "<span class='highlight'>" + match + "</span>";
          });
          paragraph.innerHTML = newText;
          if (!firstHighlightedParagraph) 
          {
            firstHighlightedParagraph = paragraph;
          }
        }
      });
  
      if (firstHighlightedParagraph) 
      {
        
        firstHighlightedParagraph.scrollIntoView({ behavior: 'smooth', block: 'start' });
      } 
      else 
      {
     
        alert(`${searchQuery} not found.`);
      }
    }
  </script>
 

  
